{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body_class %}createBody{% endblock %}

{% block body %}
    <header class="createTitle">
        <div class="bigTitle">
            <h1>Créez votre compte</h1>
        </div>
        <div class="secondTitle">
            <h2>
                Le bien-être passe avant tout par la santé mentale.
            </h2>
            <h3>
                Rejoignez-nous.
            </h3>
        </div>
    </header>

    <main class="createPage">
        <section class="containerForm">
            <form action="#" method="post">
                <div class="formGroup">
                    <label for="username">Nom d'utilisateur :</label>
                    <input type="text" id="username" name="username" class="inputCreate" required>
                </div>

                <div class="formGroup">
                    <label for="email">Email :</label>
                    <input type="email" id="email" name="email" class="inputCreate" required>
                </div>

                <div class="formGroup">
                    <label for="password">Mot de passe :</label>
                    <input type="password" id="password" name="password" class="inputCreate" required>
                </div>

                <button type="submit" class="buttonCreate">Créer le compte</button>

                <div class="formGroup">
                    <label>Ou se connecter avec Google :</label>
                    <button type="button" class="buttonCreate" style="background-color: #DB4437;">Connexion Google</button>
                </div>
            </form>
        </section>

        <section class="imgCreatePage">
            <img src="/ressources/img/rassemblement_création_compte.png" alt="couple devant un joli paysage">
        </section>
    </main>
{% endblock %}